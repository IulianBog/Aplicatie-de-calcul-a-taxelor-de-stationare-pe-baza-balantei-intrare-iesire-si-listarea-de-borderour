@{
    ViewBag.MessageOTF = "----OTF nu a fost aleas inca----";
    ViewBag.MessageStation = "----Statia nu a fost aleasa inca----";
}
<!DOCTYPE html>

<style>
    .right {
        position: fixed;
        top: 20%;
        left: 60%;
    }

    .left {
        position: fixed;
        top: 20%;
        left: 10%;
    }

    .down_left {
        position: fixed;
        top: 80%;
        left: 10%;
    }

    .down_right {
        position: fixed;
        top: 80%;
        left: 50%;
    }

    .centered {
        position: fixed;
        top: 50%;
        left: 50%;
        margin-top: -50px;
        margin-left: -100px;
    }

    .centerd_down {
        position: fixed;
        top: 75%;
        left: 50%;
        margin-top: -50px;
        margin-left: -100px;
    }
</style>

<html>

<body>

    <div class="form-row col-md-4 left">
        <label for="form-check-label"> Statie: &nbsp;</label>

        @if (ViewBag.Station == null)

        {
    <span>@ViewBag.MessageStation&nbsp;</span>

        }
        else

        {
    <span>@ViewBag.Station &nbsp;</span>
        }
        <a asp-action="Station_Selection">
            <button type="button" class="btn btn-secondary"> Alegeti statia </button>
        </a>
    </div>


    <div class="form-row col-md-4 right">
        <label for="form-check-label"> OTF:&nbsp;</label>
       
       @if(ViewBag.OTF == null)
        
        {     
    <span>@ViewBag.MessageOTF&nbsp;</span>

        }
        else

        {
    <span>@ViewBag.OTF &nbsp;</span>
        }
        <a asp-action="OTF_Selection">
            <button type="button" class="btn btn-secondary"> Alegeti OTF </button>
        </a>
    </div>

    <div class="centerd_down">
        <div class="form-row align-items-center">
            <input type="text" class="form-control mb-2" id="inlineFormInput" placeholder="Numar tren">
        </div>

        <div class="form-row align-items-center">
            <input type="text" class="form-control mb-2" id="inlineFormInput" placeholder="Numar vagoane">
        </div>
        <div class="form-row align-items-center">
            <input type="text" class="form-control mb-2" id="inlineFormInput" placeholder="Data - ora">
        </div>
    </div>

    <div class="down_left">
        <div class="form-check">
            <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1" checked>
            <label class="form-check-label">
                Sosiri
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="option2">
            <label class="form-check-label">
                Plecari
            </label>
        </div>
    </div>


</body>

</html>