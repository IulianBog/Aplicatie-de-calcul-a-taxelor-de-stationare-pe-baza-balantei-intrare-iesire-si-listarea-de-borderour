@model Proiect.Models.OTFModel


<!DOCTYPE html>

<style>
    .centered {
        position: fixed;
        top: 25%;
        left: 50%;
        margin-top: -50px;
        margin-left: -100px;
    }

    .dr {
        position: fixed;
        top: 40%;
        left: 52%;
        margin-top: -50px;
        margin-left: -100px;
    }
</style>

    <div class="row">
        <div class="col-md-12 centered">
            <form asp-action="Update_OTF" method="post">
                <div class="form-group col-md-4">
                    <label for="inputState"> OTF: </label>
                    @Html.DropDownListFor(model => model.Name,
                             new SelectList(Model.Selectie_OTF, "Value", "Value"),
                             "Va rog sa selectati OTF-istul",
                             new { @class = "form-control", @style = "width: 250px" })

                    @Html.ValidationMessageFor(model => model.Name)
                </div>
                <div class="form-group dr">
                    <input type="submit" value="Salveaza" class="btn btn-primary">
                </div>
            </form>
        </div>
    </div>
