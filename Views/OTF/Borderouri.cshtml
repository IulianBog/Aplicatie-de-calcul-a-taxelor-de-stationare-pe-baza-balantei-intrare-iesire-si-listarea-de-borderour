@model Proiect.Models.CollectioDataModel_Bor

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
    <style>
        body {
            font-family: 'Open Sans', sans-serif;
            color: black;
        }
    </style>
</head>

<body>
    @using (Html.BeginForm())
    {
        <table class="table-condensed">
            <tr>
                <td>
                    @ViewBag.Id
                </td>
            </tr>
            <tr>
                <td colspan="5">
                    <form method="post">
                        <table>
                            <tr>
                                <td>Statia:&nbsp;&nbsp;</td>
                                <td>

                                    @Html.DropDownListFor(m => @Model.Station_Id_Bor,
                                            new SelectList(Model.Stations, "Value", "Text"),
                                            "Va rog sa selectati Statia",
                                            new { @class = "form-control", @style = "width: 250px", @onchange = "FillTransactions()" })

                                    @Html.ValidationMessageFor(m => m.Station_Id_Bor)

                                </td>

                                <td>&nbsp;&nbsp;OTF:&nbsp;&nbsp;</td>
                                <td>
                                    @Html.DropDownListFor(m => @Model.OTF_Id_Bor,
                                                new SelectList(Model.OTFs, "Value", "Text"),
                                                "Va rog sa selectati OTF",
                                                new { @class = "form-control", @style = "width: 250px" })
                                    @Html.ValidationMessageFor(m => m.OTF_Id_Bor)
                                </td>
                              

                                @* <td>
            &nbsp;&nbsp;<input type="submit" value="Salveaza" class="btn btn-primary" asp-action="setDrops_Borderouri">
        </td>
        <td>
            &nbsp;&nbsp;<input type="submit" value="Genereaza" class="btn btn-success" asp-action="">
        </td>
        <td>
            &nbsp;&nbsp;<input type="submit" value="Detalii" class="btn btn-success" asp-action="">
        </td>
        <td>
            &nbsp;&nbsp;<input type="submit" value="Sumar" class="btn btn-info" asp-action="">
        </td>
                                *@
                                
                            </tr>
                            <tr>
                                <td>
                               DateTime:
                                </td>
                                <td>
                                    <input class="form-control" asp-for=@Model.DateTime_Bor asp-format="{0:yyyy-MM-ddTHH:mm}" type="datetime-local" style="width: 250px" />
                                    &nbsp;&nbsp;
                                    @Html.ValidationMessageFor(m => m.DateTime_Bor)
                                </td>
                                <td colspan="2">
                                    
                                </td>
                            </tr>
                            <tr>
                                <td colspan="4">
                                    &nbsp;&nbsp;<input type="submit" value="Salveaza" class="btn btn-primary" asp-action="setDrops_Borderouri">
                                    &nbsp;&nbsp;<input type="submit" value="Genereaza" class="btn btn-success" asp-action="Genereaza_Borderouri">
                                    &nbsp;&nbsp;<input type="submit" value="Detalii" class="btn btn-success" asp-action="">
                                    &nbsp;&nbsp;<input type="submit" value="Sumar" class="btn btn-info" asp-action="">
                                </td>
                            </tr>
                        </table>
                    </form>
                </td>
            </tr>
        </table>
       

    }
</body>

</html>
